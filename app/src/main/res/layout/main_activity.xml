<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:CircleProgressBar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:theme="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:visibility="gone"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <Button
        android:id="@+id/bt_show"
        android:padding="10dp"
        android:layout_width="300dp"
        android:translationZ="60dp"
        android:layout_height="100dp"
        android:text="show" />

    <Button
        android:padding="10dp"
        android:id="@+id/bt_dissmiss"
        android:layout_width="300dp"
        android:translationZ="80dp"
        android:layout_height="100dp"
        android:text="dissmiss" />

    <com.example2.lrudemo.toast.LoadingLayout

        android:id="@+id/lay_content"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:translationZ="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <com.azul.yida.milaazul.view.myView.CircleProgressBar
            android:background="@color/colorPrimary"
            android:id="@+id/circle1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            />
    </com.example2.lrudemo.toast.LoadingLayout>

    <blink
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_bright"
            android:translationZ="10dp"
            android:text="Let's party like it's 1995!" />
    </blink>
    <TextView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:translationZ="10dp"
        android:text="Let's party like it's 1995!" />

    <com.azul.yida.milaazul.view.myView.CircleProgressBar
        android:background="@color/colorPrimary"
        android:id="@+id/circle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:translationZ="30dp"
        CircleProgressBar:radius="8dp"


        />
    <ProgressBar
        android:background="@color/colorPrimary"
        android:translationZ="40dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerInParent="true" />



</LinearLayout>